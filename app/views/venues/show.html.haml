.row
  .span3
    =image_for(venue, "220x") if venue.image
    .span3.mt-2
      %h4 Region
      %p=venue.region
    -if venue.any_present?(:address, :phone, :email)
      .span3.mt-2
        %h4 Contact
        %ul.unstyled
          -if venue.address.present?
            %li
              =venue
              =render_address(venue)
          -if venue.phone.present?
            %li
              Tel:
              =internationalize_phone_number(venue.phone)
          -if venue.email.present?
            %li
              Email:
              =link_to venue.email, "mailto:#{venue.email}"
    -if venue.any_present?(:website_url, :facebook_url, :twitter_url)
      .span3.mt-2
        %h4 Links
        %ul.unstyled
          -if venue.website_url.present?
            %li=link_to_url(venue.website_url, :target => "_blank")
          -if venue.facebook_url.present?
            %li=link_to("Facebook", venue.facebook_url)
          -if venue.twitter_url.present?
            %li=link_to("Twitter", venue.twitter_url, :target => '_blank')

    
  .span8
    %h1.mb-1 Venue profile:
    %h2=venue
    %h3=link_to_self venue.promoter
    =simple_format(venue.description)
    .row.mt-2
      .span8
        %h4 Keyholder contact details
    .row.mt-2
      .span8
        %h4 Booking contact details
    .row.mt-2
      .span8
        %h4 Technical information

.row.mt-2
  .span8
    =options_panel do
      =back_link
      =link_if_can("Edit venue", [:edit, venue])
      =link_if_can("Delete venue", [:destroy, venue], :confirm => "Are you sure?")

=form.inputs do
  =form.input :name
  =form.input :region, :as => :select, :collection => Pan::REGIONS
  =form.input :description, :input_html => {:rows => 10, :class => "span8"}
  =form.input :genre_list, :label => "Genres currently promoting", :as => :select, :multiple => true, :collection => tag_list_options(:genres, promoter, Tag.genres)
  =form.input :genre_interest_list, :label => "Genres interested in", :as => :select, :multiple => true, :collection => tag_list_options(:genre_interests, promoter, Tag.genres)
  =form.input :art_form_list, :label => "Art forms currently promoting", :as => :select, :multiple => true, :collection => tag_list_options(:art_forms, promoter, Tag.art_forms)
  =form.input :art_form_interest_list, :label => "Art forms interested in", :as => :select, :multiple => true, :collection => tag_list_options(:art_form_interests, promoter, Tag.art_forms)
  =form.input :funder_list, :label => "Funding sources", :as => :select, :multiple => true, :collection => tag_list_options(:funders, promoter)
  =form.input :retained_image, :as => :hidden
  -if promoter.image && promoter.errors[:image].empty?
    =image_for(promoter, "100x")
    =form.input :remove_image, :as => :boolean
  
  =form.input :image, :as => :file
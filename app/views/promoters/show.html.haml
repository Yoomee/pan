.row
  .span3
    =image_for(promoter, "220x") if promoter.image
    .span3.mt-2
      %h4 Region
      %p Northern Isles
    -if promoter.any_present?(:address, :phone, :email)
      .span3.mt-2
        %h4 Contact
        %ul.unstyled
          -if promoter.address.present?
            %li
              =promoter
              =render_promoter_address(promoter)
          -if promoter.phone.present?
            %li
              Tel:
              =internationalize_phone_number(promoter.phone)
          -if promoter.email.present?
            %li
              Email:
              =link_to promoter.email, "mailto:#{promoter.email}"
    -if promoter.any_present?(:website_url, :facebook_url, :twitter_url)
      .span3.mt-2
        %h4 Links
        %ul.unstyled
          -if promoter.website_url.present?
            %li=link_to_url(promoter.website, :target => "_blank")
          -if promoter.facebook_url.present?
            %li=link_to("Facebook", promoter.facebook_url)
          -if promoter.twitter_url.present?
            %li=link_to("Twitter", promoter.twitter_url, :target => '_blank')

    
  .span8
    %h1.mb-1=title(promoter)
    =simple_format(promoter.description)
    .row.mt-2
      .span8
        %h4 Venue(s)
        %ul.unstyled
          %li
            Borogha Gallery
            =link_to 'View', '#'
          %li
            Garrison Theatre
            =link_to 'View', '#'
          %li
            Mareel
            =link_to 'View', '#'
          %li
            The Hatchery
            =link_to 'View', '#'
            
    .row.mt-2
      .span8
        %h4 Individual profiles
    .row
      .span2
        =link_to '#' do
          =image_placeholder('120x120#')
        %h5=link_to 'Kathy Hubbard', '#'
        %p=link_to 'Head of Development', '#'
      .span2
        =link_to '#' do
          =image_placeholder('120x120#')
        %h5=link_to 'Donald Anderson', '#'
        %p=link_to 'Arts Development Officer, Literature', '#'
      .span2
        =link_to '#' do
          =image_placeholder('120x120#')
        %h5=link_to 'John Haswell', '#'
        %p=link_to 'Arts Development Officer, Drama', '#'
      .span2
        =link_to '#' do
          =image_placeholder('120x120#')
        %h5=link_to 'Claire Aldington', '#'
        %p=link_to 'Arts Development Officer, Visual Arts', '#'
      
    .row.mt-2
      .span8
        %h4 Genres/art-forms currently promoting
    .row.mt-2
      .span8
        %h4 Genres/art-forms interested in
    .row.mt-2
      .span8
        %h4 List of resources
    .row.mt-2
      .span8
        %h4 Skills matrix

.row.mt-2
  .span8
    =options_panel do
      =back_link
      =link_if_can("Edit promoter", [:edit, promoter])
      =link_if_can("Delete promoter", [:destroy, promoter], :confirm => "Are you sure?")

.row
  .span3
    .row
      .span3
        =image_for(company, "220x") if company.image
      .span3.mt-2
        %h4=pluralize(22, 'Review')
        %table.unstyled
          %tr
            %td Excellent
            %td
              -3.times do
                %i.icon.icon-star
          %tr
            %td Very good
            %td
              -1.times do
                %i.icon.icon-star
          %tr
            %td Average
          %tr
            %td Poor
          %tr
            %td Terrible
      -if company.any_present?(:website_url, :social_urls)
        .span3.mt-2
          %h4 Links
          %ul.unstyled
            -if company.website_url.present?
              %li=link_to_url(company.website_url, :target => "_blank")
            -company.social_urls.each do |site_name, url|
              %li=link_to(site_name, url, :target => "_blank")
      -if company.contact1_details.present?
        .span3.mt-2
          %h4 Primary contact
          =auto_link(company.contact1_details.join("<br />").html_safe)
      -if company.contact2_details.present?
        .span3.mt-2
          %h4 Secondary contact
          =auto_link(company.contact2_details.join("<br />").html_safe)
      .span3.mt-2
        %h4 Upcoming shows
        %ul.unstyled
          -4.times do
            %li
              ="Production name #{rand(30)}/#{rand(12)}/12"
              =link_to("view", "#")
        
  .span8
    %h1.mb-1=title(company)
    =simple_format(company.description)
    .row.company_tag_lists
      .span2.mb-1
        %h4 Current show:
        "The Final Tour"
      -if company.genre_list.present?
        .span2.mb-1
          %h4 Genres
          %ul.unstyled
            -company.genre_list.each do |genre|
              %li=genre.titleize.humanize
      -if company.art_form_list.present?
        .span2.mb-1
          %h4 Art forms
          %ul.unstyled
            -company.art_form_list.each do |art_form|
              %li=art_form.titleize.humanize
      -if company.funder_list.present?
        .span2.mb-1
          %h4 Funders
          %ul.unstyled
            -company.funder_list.each do |funder|
              %li=funder.titleize.humanize
      .span2.mb-1
        %h4 Scale of work
        Large scale
    .row.mt-2    
      -if (media_posts = company.posts.where("image_uid LIKE '%'").limit(8)).present?
        .span4
          %h4 Photos/videos
          .row.mt-1
            -media_posts.each do |media_post|
              .span1.mb-1
                =link_to("#", :data => {:toggle => "modal", :backdrop => false, :"modal-url" => modal_post_path(media_post), :"modal-id" => "post_modal"}) do
                  =image_for(media_post, '60x60#', :class => "#{media_post.has_video? ? 'video-image' : ''}")
      .span3{:class => "#{media_posts.present? ? 'offset1' : ''}"}
        %h4 Venues regularly visited
        .row.mt-1
          -6.times do
            .span1.mb-1
              =image_placeholder("60x60#")
    .row.mt-2
      .span8
        %h4 Proposed tour dates
        .row.mt-1
          -8.times do
            .span1.mb-1
              =image_placeholder("60x60#")
    .row.mt-2
      .span8
        %h4.mb-1 Updates
        -if can?(:create, Post)
          =render("posts/remote_form", :post => current_user.posts.build(:target => company))
        =render("posts/posts", :posts => posts)
.row.mt-2
  .span8
    =options_panel do
      =back_link
      =link_if_can("Edit company", [:edit, company])
      =link_if_can("Delete company", [:destroy, company], :confirm => "Are you sure?")

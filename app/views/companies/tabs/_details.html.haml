=form.inputs do
  =form.input :name
  =form.input :description, :input_html => {:rows => 10, :class => "span8"}
  =form.input :genre_list, :label => "Genres", :as => :select, :multiple => true, :collection => Tag.genres.collect(&:name)
  =form.input :art_form_list, :label => "Art forms", :as => :select, :multiple => true, :collection => Tag.art_forms.collect(&:name)
  =form.input :funder_list, :label => "Funders", :as => :select, :multiple => true, :collection => Tag.funders.collect(&:name)
  =form.input :work_scale_list, :label => "Scale of work", :as => :select, :multiple => true, :collection => Tag.work_scales.collect(&:name)
  =form.input :retained_image, :as => :hidden
  -if company.image && company.errors[:image].empty?
    =image_for(company, "100x")
    =form.input :remove_image, :as => :boolean
  =form.input :image, :as => :file
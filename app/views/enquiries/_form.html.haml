=semantic_form_for(enquiry, :url => enquiries_path(:id => enquiry.form_name)) do |form|
  =form.inputs do
    =form.input :form_name, :as => "hidden"
    =render("enquiries/#{@enquiry.form_name.downcase}_form", :enquiry => enquiry, :form => form)
  =form.buttons do
    -if enquiry.form_name=='promoter'
      =link_to("Back", new_registration_path, :class => 'btn pull-left')
    =form.commit_button "Send", :button_html => {:data => {:"loading-text" => 'Sending...'}, :class => "btn btn-primary#{enquiry.form_name=='promoter' ? ' pull-right' : ''}"}
.row.mb-2
  .span12
    =render("community/nav")
.row.mb-2
  .span12
    %h1=title("Resources")
.row
  .span3
    =render("resources/left_col")
  .span9
    -if @resources.empty?
      %p
        -if @query
          ="No resources match \"#{@query}\"."
        -else
          No resources have been added to the site yet.
    -else
      .row      
        -@resources.each do |resource|
          .span4.resource.mb-2
            =link_to(image_for(resource, "90x150"), resource, :class => "resource-image shadow")
            .resource-info
              .resource-title-summary
                =link_to_self(resource, :class => "resource-title")
                =summarize(resource, :length => 100)
              %ul.tag-list.tag-list-horizontal
                -resource.resource_tags.each do |tag|
                  %li=link_to(tag_label(tag), resources_path(:tag => tag.to_s), :class => "tag")
              -if !resource.posts.empty?
                =link_to(resource, :class => "small-info-text pull-left clear mt-1") do
                  %i.icon.icon-comment
                  =pluralize(resource.posts.count, "comment")
          
.row
  .span12
    =options_panel do
      =link_if_can("Add resource", [:new, Resource])
-url_option = user.new_record? && promoter ? {:url => promoter_users_path(promoter)} : {}
=semantic_form_for(user, {:multipart => true}.merge(url_option)) do |form|
  =form.inputs do
    =form.input :first_name
    =form.input :last_name
    =form.input :email
    -if user.new_record?
      =form.input :password 
    =form.input :job_title
    =form.input :bio, :input_html => {:rows => 7, :class => "span5"}
    =form.input :retained_image, :as => :hidden
    =form.input :image, :as => :file
  =form.buttons do
    =form.commit_button "Save"
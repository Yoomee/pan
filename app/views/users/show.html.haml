.row
  .span12
    %h1.tour
      %i.icon-user
      =user.full_name
-if current_user == user
  =render 'own_profile'
-else
  =render 'other_profile'


.row.mt-2
  .span8
    =options_panel do
      =back_link
      =link_if_can("Edit profile", [:edit, user])
      =link_if_can("Delete user", [:destroy, user], :confirm => "Are you sure?")
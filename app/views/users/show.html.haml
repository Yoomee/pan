-if can?(:index, Post)
  .row.mb-2
    .span12
      =render("community/nav")
.row
  .span3
    .row
      .span3
        =image_for(user, "220x")
      -if user.promoter
        .span3.mt-2
          -if user.job_title
            %strong=user.job_title
            at
          =link_to_self user.promoter
      -if !user.links.empty?
        .span3.mt-2
          %h4 Links
          %ul.unstyled.links
            -user.links.each do |link|
              %li
                =image_tag(link.favicon)
                =link_to(link, link.url, :target => '_blank')
  .span9
    %h1.mb-1=title(user)
    =simple_format(user.bio)
    .row
      .span9
        %h4 My main skill areas are
        -if user.skill_list.empty?
          .italic
            %span Nothing entered yet.
            =link_to("Edit", edit_user_path(user, :anchor => "profile")) if can?(:edit, user)
        -else
          %ul.unstyled.mt-1
            -user.skill_list.each do |tag_name|
              %li=tag_name.titleize.humanize
        %h4.mt-1 I can offer help with
        -if user.skills_offered_list.empty?
          .italic        
            %span Nothing entered yet.
            =link_to("Edit", edit_user_path(user, :anchor => "profile")) if can?(:edit, user)          
        -else        
          %ul.unstyled.mt-1
            -user.skills_offered_list.each do |tag_name|
              %li=tag_name.titleize.humanize
        %h4.mt-1 I would like help with 
        -if user.skills_needed_list.empty?
          .italic        
            %span Nothing entered yet.
            =link_to("Edit", edit_user_path(user, :anchor => "profile")) if can?(:edit, user)
        -else
          %ul.unstyled.mt-1
            -user.skills_needed_list.each do |tag_name|
              %li=tag_name.titleize.humanize
    =render("organisations/facebook_twitter", :organisation => user)
    .row.mt-2
      .span9
        %h4.mb-1="#{user.first_name}'s posts"
        -if can?(:create, Post)
          =render("posts/remote_form", :post => current_user.posts.build(:target => (current_user==user ? nil : user)))
        =render("posts/posts", :posts => wall_posts)
.row.mt-2
  .span8
    =options_panel do
      =back_link
      =link_if_can("Edit profile", [:edit, user])

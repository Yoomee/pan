=form.inputs do
  =form.input :name
  =form.input :description, :input_html => {:rows => 10, :class => "span8"}
  =form.input :genre_list, :label => "Genres", :as => :select, :multiple => true, :collection => tag_list_options(:genres, performer)
  =form.input :art_form_list, :label => "Art forms", :as => :select, :multiple => true, :collection => tag_list_options(:art_forms, performer)
  =form.input :funder_list, :label => "Funders", :as => :select, :multiple => true, :collection => tag_list_options(:funders, performer)
  =form.input :work_scale_list, :label => "Scale of work", :as => :select, :multiple => true, :collection => tag_list_options(:work_scales, performer)
  =form.input :retained_image, :as => :hidden
  -if performer.image && performer.errors[:image].empty?
    =image_for(performer, "100x")
    =form.input :remove_image, :as => :boolean
  =form.input :image, :as => :file
=form.inputs do
  =form.input :name
  %label.control-label
    Profile image
  -if performer.image && performer.errors[:image].empty?
    =image_for(performer, "220x150")
    =form.input :remove_image, :as => :boolean, :label => "No image"
  -else
    =image_for(performer, "220x150")
  =form.input :image, :as => :file, :label => "Select a file to upload",  :input_html => {:class => "mb-2"}
  =form.input :description, :input_html => {:rows => 8, :class => "span8"}, :label => "Full Description".html_safe
  %p#countdown
  =form.input :category_list, :label => "Genre", :as => :select, :multiple => true, :collection => tag_list_options(:categories, performer, Tag.genres)
  =form.input :tag_list, :label => "Tags", :as => :select, :multiple => true, :collection => tag_list_options(:tags, performer, Tag.tags)
  =form.input :retained_image, :as => :hidden
=semantic_form_for(performer, :html => {:multipart => true}) do |form|
  =error_alert(performer)
  =tabs('details', 'contact_info', ["slideshow", "Photo gallery"], 'organisations/tabs/links', 'external_reviews/tabs/reviews', :form => form)
  =form.buttons do
    =form.commit_button "Save", :button_html => {:class => 'btn-primary'}
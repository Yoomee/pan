.alert
  %b.icon-info-sign
  Click on "+Add a link" to build a list of relevant links below
-content_for(:head) do
  :javascript
    $(document).ready(function() {
      Link.init();
      $('#links').bind('insertion-callback', function() {
        Link.init();
      });
    });

=form.semantic_fields_for :facebook_link do |fields|
  =fields.input :url, :as => :string, :label => "Facebook"

=form.semantic_fields_for :twitter_link do |fields|
  =fields.input :url, :as => :string, :label => "Twitter"

=form.semantic_fields_for :youtube_link do |fields|
  =fields.input :url, :as => :string, :label => "Youtube"

=form.semantic_fields_for :website_link do |fields|
  =fields.input :url, :as => :string, :label => "Website"

=form.semantic_fields_for :links do |link_form|
  -link = link_form.object 
  =render("organisations/link_fields", :f => link_form)
=link_to_add_association "+ Add a link", form, :links, :partial => "organisations/link_fields", :"data-association-insertion-node" => '#links .add_fields'

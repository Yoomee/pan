!!!5
%html
  %head
    %title
      =Settings.site_name
      ="- #{@page_title}" if @page_title.present?
    =stylesheet_link_tag("application")
    =javascript_include_tag("application")
    =csrf_meta_tags
    =yield :head
    =google_analytics_js
  -body_tag do
    .main-wrapper
      -if false
        #beta-bar
          This website is a work in progress. 
          =link_to('Click here to read more about the beta.', beta_path)
      -if flash.present?
        =yield_with_bootstrap(render_flash)
      =render("layouts/header")
      =yield_with_bootstrap(yield)
      .push
    .footer-wrapper
      =render("layouts/footer")
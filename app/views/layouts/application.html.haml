!!!5
%html
  %head
    %title
      =Settings.site_name
      ="- #{@page_title}" if @page_title.present?
    =stylesheet_link_tag("application", "http://f.fontdeck.com/s/css/GzquBrtA5R1IjOjZ9KPx8cFffVQ/localhost/25297.css", "http://f.fontdeck.com/s/css/GzquBrtA5R1IjOjZ9KPx8cFffVQ/www.pan.yoomee.com/25297.css", "http://f.fontdeck.com/s/css/GzquBrtA5R1IjOjZ9KPx8cFffVQ/pan.yoomee.com/25297.css")
    =javascript_include_tag("application")
    =csrf_meta_tags
    =yield :head
    =google_analytics_js
  -body_tag do
    .main-wrapper
      -if logged_in?
        =render("layouts/header")
        -if !current_page?(root_path) && controller.action_name != "welcome"
          =render("layouts/nav_strip")
      -elsif current_page?(invite_path)
        .container
        .top-bar.logged-out
          .container
            .row
              .span12
                %h1#site_logo
                  =link_to "/" do
                    =Settings.site_name 
    
                  
      -if flash.present?
        =yield_with_bootstrap(render_flash)    
      =yield_with_bootstrap(yield)
      .push
    -if current_user  
      .footer-wrapper
        =render("layouts/footer")
.container#header
  .row#header_row
    .span4
      .row
        .span3
          %h1#site_logo
            %span
              =Settings.site_name
        .span3
          =link_to_slug('About', 'about-tourbook', :class => 'subnav_link')
          =link_to_slug('contact', :class => 'subnav_link')
          =link_to("Sitemap", pages_path, :class => "subnav_link") if current_user.try(:admin?)
    .span8
      #nav.main-nav
        %ul.unstyled
          =li_with_active(current_page?(root_path), link_to("Home", root_path))
          =li_with_active(controller_name=='performers', link_to("Performers", performers_path))
          =li_with_active(viewing_community?, link_to("Community", community_path))
      #header_links
        -if user_signed_in?
          =link_to(sign_out_path, :method => :delete, :class => "header_link btn") do
            %icon.icon-signout
            =t(:logout)
          -#
            .header_link.pull-right
              Logged in as
              =link_to_self(current_user)
        -else
          =link_to "Register", new_user_path, :class => "header_link btn"
          =link_to(t(:login), sign_in_path(:next => request.path == '/' ? nil : request.path), :class => "header_link btn btn-primary")
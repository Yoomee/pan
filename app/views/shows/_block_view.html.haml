-@tours.each_slice(3) do |three_tours|
  .row
    -three_tours.each do |tour|
      .span3
        .show-tour
          =link_to tour do
            =image_for(tour, "200x150#")
            %h2=tour
            %h3=tour.performer
            %p=tour.dates_string
            %p
              =truncate(tour.description, :length => 200, :separator => " ")
              =#link_to "read more...", tour_path(tour)
            .show-tags
              -tour.genres.each do |tag|
                -param_tags = original_tags.dup
                -param_tags << tag.name unless param_tags.delete(tag.name)
                =link_to(shows_path(:tags => param_tags, :start_date => @start_date, :end_date => @end_date), :class => "tag #{@tags.include?(tag.name) ? 'active' : ''}") do
                  %span.label.tag-label
                    =tag
          .clearfix
-@tours.shuffle.each do |tour|
  .row
    .span9.show-tour.list
      .row
        .span3
          =link_to show_path(tour) do
            =image_for(tour, "200x160#", :class => "list-image")
        .span6.show-list-view-text
          =link_to tour do
            %h2=tour
            %h3=tour.performer
            %p=tour.dates_string                         
            .show-tags
              -tour.genres.each do |tag|
                -param_tags = original_tags.dup
                -param_tags << tag.name unless param_tags.delete(tag.name)
                =tag_link(tag.name, {:tags => param_tags, :start_date => @start_date, :end_date => @end_date, :collection => @collection, :region => @region}, "tag #{@tags.include?(tag.name.gsub(/-/, ' ')) ? 'active' : ''} #{tag.name}")
            .clearfix